{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["es2020"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["./index.ts"]
}
