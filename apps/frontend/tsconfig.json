{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@Pages/*": ["./src/pages/*"],
      "@Assets/*": ["./src/assets/*"],
      "@Types/*": ["./src/types/*"],
      "@Utils/*": ["./src/utils/*"],
      "@Components/*": ["./src/components/*"],
      "@Services/*": ["./src/services/*"],
      "@Modules/*": ["./src/modules/*"],
      "@Toggles/*": ["./src/toggles/*"],
      "@Config/*": ["./config/*"],
      "@Server/*": ["./server/*"]
    }
  },
  "include": ["./src/**/*"]
}
